{
  "name": "gj-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build-tokens": "turbo run build-tokens",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "build-tokens:watch": "pnpm --filter ui watch-tokens"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
